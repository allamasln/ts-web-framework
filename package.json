{
	"name": "typescript-web-framework",
	"version": "1.0.0",
	"description": "A Typescript Web Framework",
	"author": "Antonio Llamas",
	"repository": "edwinhern/express-typescript-2024",
	"license": "MIT",
	"main": "index.ts",
	"private": true,
	"scripts": {
		"dev": "nodemon --watch src --exec ts-node -r tsconfig-paths/register src/example",
		"build": "tsup",
		"start": "node dist/index.js"
	},
	"dependencies": {
		"@types/express": "^5.0.0",
		"express": "^4.21.1",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.1"
	},
	"devDependencies": {
		"nodemon": "^3.1.7",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"tsup": "^8.0.2",
		"typescript": "^5.4.4"
	},
	"tsup": {
		"entry": [
			"src",
			"!src/**/__tests__/**",
			"!src/**/*.test.*"
		],
		"splitting": false,
		"sourcemap": true,
		"clean": true
	}
}
